<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.FindPasswordActivity">

    <ImageView
        android:id="@+id/imageView_find_password_linkyBLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:text="비밀번호 찾기"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/editText_find_password_phone_number"
        app:layout_constraintStart_toStartOf="@id/editText_find_password_phone_number" />

    <EditText
        android:id="@+id/editText_find_password_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/edittext_background"
        android:hint="가입된 휴대폰 번호"
        android:paddingHorizontal="15dp"
        android:paddingVertical="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_find_password_linkyBLogo" />

    <TextView
        android:id="@+id/textView_find_password_errorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="오류 메시지"
        app:layout_constraintStart_toStartOf="@id/editText_find_password_phone_number"
        app:layout_constraintTop_toBottomOf="@id/editText_find_password_phone_number" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_find_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_background"
        android:padding="18dp"
        android:text="휴대폰 인증으로 비밀번호 찾기"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>