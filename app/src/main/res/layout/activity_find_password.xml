<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.FindPasswordActivity">

    <ImageView
        android:layout_width="14dp"
        android:layout_height="12dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_find_password_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="169dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_find_password_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/roboto_regular"
        android:text="마음 맞는 선후배 매칭 서비스"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_find_password_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/roboto_regular"
        android:text="비밀번호 찾기"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/editText_find_password_phone_number"
        app:layout_constraintStart_toStartOf="@id/editText_find_password_phone_number" />

    <EditText
        android:id="@+id/editText_find_password_phone_number"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="188dp"
        android:background="@drawable/edittext_background"
        android:hint="가입된 휴대폰 번호"
        android:paddingStart="10dp"
        android:textColor="@color/grey"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_find_password_logo" />

    <TextView
        android:id="@+id/textView_find_password_errorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="오류 메시지"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@id/editText_find_password_phone_number"
        app:layout_constraintTop_toBottomOf="@id/editText_find_password_phone_number" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_find_password"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/roboto_bold"
        android:paddingVertical="16dp"
        android:text="휴대폰 인증으로 비밀번호 찾기"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>