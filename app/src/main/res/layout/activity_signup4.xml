<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".auth.SignupActivity4">

    <ImageView
        android:id="@+id/imageView_signup4_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="16dp"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/rounded_progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="74dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="-1dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/textView_signup4_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="23dp"
                android:text="프로필 정보"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_signup4_profile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="68dp"
                android:text="프로필"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_signup4_profile_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="8dp"
                android:text="프로필로 사용할 이미지를 선택해 주세요."
                android:textColor="@color/grey"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_profile_title" />

            <ImageView
                android:id="@+id/imageView_signup4_profile1"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/profile1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_profile_explain" />
            <ImageView
                android:id="@+id/imageView_signup4_profile1_green"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/circlegreen"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_profile_explain" />
            <ImageView
                android:id="@+id/imageView_signup4_profile1_grey"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/circlegrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_profile_explain" />

            <ImageView
                android:id="@+id/imageView_signup4_profile2"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginStart="111dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/profile2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_profile_explain" />
            <ImageView
                android:id="@+id/imageView_signup4_profile2_green"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginStart="106dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/circlegreen"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_profile_explain" />
            <ImageView
                android:id="@+id/imageView_signup4_profile2_grey"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginStart="106dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/circlegrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_profile_explain" />

            <ImageView
                android:id="@+id/imageView_signup4_profile3"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginStart="192dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/profile3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_profile_explain" />
            <ImageView
                android:id="@+id/imageView_signup4_profile3_green"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginStart="187dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/circlegreen"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_profile_explain" />
            <ImageView
                android:id="@+id/imageView_signup4_profile3_grey"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginStart="187dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/circlegrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_profile_explain" />

            <ImageView
                android:id="@+id/imageView_signup4_profile4"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginStart="273dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/profile4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_profile_explain" />
            <ImageView
                android:id="@+id/imageView_signup4_profile4_green"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginStart="268dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/circlegreen"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_profile_explain" />
            <ImageView
                android:id="@+id/imageView_signup4_profile4_grey"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginStart="268dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/circlegrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_profile_explain" />

            <TextView
                android:id="@+id/textView_signup4_gender_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="113dp"
                android:text="성별"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_profile_explain" />

            <!-- 남 -->
            <TextView
                android:id="@+id/textView_btn_male_green"
                android:layout_width="37dp"
                android:layout_height="28dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/tv_border_green"
                android:gravity="center"
                android:text="남"
                android:textColor="@color/green"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_gender_title" />
            <TextView
                android:id="@+id/textView_btn_male_grey"
                android:layout_width="37dp"
                android:layout_height="28dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/tv_border"
                android:gravity="center"
                android:text="남"
                android:textColor="@color/grey"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_gender_title" />

            <!-- 여 -->
            <TextView
                android:id="@+id/textView_btn_female_green"
                android:layout_width="37dp"
                android:layout_height="28dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/tv_border_green"
                android:gravity="center"
                android:text="여"
                android:textColor="@color/green"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_gender_title" />
            <TextView
                android:id="@+id/textView_btn_female_grey"
                android:layout_width="37dp"
                android:layout_height="28dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/tv_border"
                android:gravity="center"
                android:text="여"
                android:textColor="@color/grey"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_gender_title" />

            <TextView
                android:id="@+id/textView_signup4_mbti_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="69dp"
                android:text="MBTI"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_gender_title" />

            <Spinner
                android:id="@+id/spinner_mbti"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/spinner_signup"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_mbti_title"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:src="@drawable/spinner_dropdown"
                app:layout_constraintBottom_toBottomOf="@+id/spinner_mbti"
                app:layout_constraintEnd_toEndOf="@id/spinner_mbti"
                app:layout_constraintTop_toTopOf="@+id/spinner_mbti" />

            <TextView
                android:id="@+id/textView_signup4_personal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="69dp"
                android:text="성격"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_mbti_title" />

            <ImageView
                android:id="@+id/imageView_signup4_plus_personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_personal_title"
                app:srcCompat="@drawable/plus2"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_signup_personal"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginStart="62dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="18dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_signup4_personal_title"
                tools:listitem="@layout/item_myprofile_personal_2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="52dp"
                android:layout_marginEnd="25dp"
                android:background="@color/grey_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_signup4_personal_title" />

            <TextView
                android:id="@+id/textView_signup4_interest_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="70dp"
                android:text="관심사"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_personal_title" />

            <ImageView
                android:id="@+id/imageView_signup4_plus_interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_interest_title"
                app:srcCompat="@drawable/plus"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_signup_interest"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginStart="62dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="18dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_signup4_interest_title"
                tools:listitem="@layout/item_myprofile_interest_2" />

            <TextView
                android:id="@+id/textView_signup4_intro_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="70dp"
                android:text="소개"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_signup4_interest_title" />

            <EditText
                android:id="@+id/editText_signup_intro"
                android:layout_width="match_parent"
                android:layout_height="149dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/tv_border"
                android:gravity="start"
                android:hint="본인 소개 글을 작성해 주세요.(300자 이하)"
                android:paddingHorizontal="15dp"
                android:paddingVertical="9dp"
                android:textColor="@color/grey"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_signup4_intro_title"
                tools:ignore="SpeakableTextPresentCheck" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView_btn_next_5_green"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/tv_btn_signup_green"
        android:text="Linky - B 시작하기 "
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        android:shadowColor="@color/white"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="2dp"/>
    <TextView
        android:id="@+id/textView_btn_next_5_grey"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/tv_btn_signup_grey"
        android:text="Linky - B 시작하기 "
        android:gravity="center"
        android:textColor="@color/grey"
        android:textSize="16dp"
        android:textStyle="bold"
        android:shadowColor="@color/grey"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="2dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>