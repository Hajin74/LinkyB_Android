<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:src="@drawable/back"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ll_filter_name"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="32dp"
        android:paddingRight="5dp"
        android:paddingLeft="20dp"/>

    <LinearLayout
        android:id="@+id/ll_filter_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="25dp"
        android:paddingLeft="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="필터"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*원하지 않는 조건의 사용자를 제외한 결과를 확인할 수 있습니다."
            android:textSize="13dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_filter_department"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"

        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_filter_name">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="학과"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/department_spinner"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/spinner_background"></Spinner>

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/filter_delete"
                android:padding="7dp"
                android:paddingEnd="30dp"
                android:text="정보시스템공학과"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.8"></TextView>

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="4dp"
                android:background="@color/white"
                android:src="@drawable/delete"
                app:layout_constraintEnd_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/textView"></ImageButton>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_home_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="25dp"

        app:layout_constraintTop_toBottomOf="@+id/ll_filter_department">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="학번"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="검색 조건에 포함할 학번의 범위를 선택해주세요"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_home_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_home_number">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="성별"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="검색 조건에 포함할 성별을 정해주세요"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="78dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/filter_button"
                android:text="모든 성별"
                android:textColor="@color/grey"
                android:textSize="10dp"></androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/filter_button"
                android:text="남"
                android:textColor="@color/grey"
                android:textSize="10dp"></androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/filter_button"
                android:text="여"
                android:textColor="@color/grey"
                android:textSize="10dp"></androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_home_mbti"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_home_gender">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MBTI"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/mbti_spinner"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/spinner_background"></Spinner>

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_filter_mbti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/filter_delete"
                android:padding="7dp"
                android:paddingEnd="35dp"
                android:text="ESTP"
                android:textColor="@color/green"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.8"></TextView>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="4dp"
                android:background="@color/white"
                android:src="@drawable/delete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageButton>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_weight="0.5"
        android:backgroundTint="@color/green"
        android:text="적용하기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>