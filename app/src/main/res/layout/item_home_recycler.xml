<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/profile_img"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/profileimage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:layout_marginTop="4dp"
        android:text="배고픈청설모"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/item_connect_interest" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="173dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/bean"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_home_likenumber"
        android:layout_width="14dp"
        android:layout_height="16dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="12"
        android:textColor="#9FC743"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_home_department"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="시각디자인학과/20학번"
        android:textColor="#878787"
        android:textSize="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_item_contactimg"
        android:layout_weight="49"
        android:layout_width="49dp"
        android:layout_height="50dp"
        android:src="@drawable/plus2"
        android:background="@drawable/plusbackground"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>